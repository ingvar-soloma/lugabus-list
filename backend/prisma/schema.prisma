// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PublicFigure {
  id             String    @id @default(uuid())
  name           String
  status         Status    @default(PENDING)
  role           String
  statement      String
  rating         Int       @default(0)
  evidence_links String[]
  proofs         Proof[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // This GIN index optimizes case-insensitive searches on `name` and `role` fields.
  // It uses the `pg_trgm` extension to significantly speed up `ILIKE` queries
  // that are generated by Prisma's `insensitive` mode for `contains` filters.
  @@index([name(ops: raw("gin_trgm_ops")), role(ops: raw("gin_trgm_ops"))], type: Gin)
}

model Proof {
  id        String       @id @default(uuid())
  fileUrl   String
  figure    PublicFigure @relation(fields: [figureId], references: [id])
  figureId  String
  uploadedAt DateTime    @default(now())
  auditLog  AuditLog?
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  timestamp DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  details   Json?
  proofId   String?  @unique
  proof     Proof?   @relation(fields: [proofId], references: [id])
}

model User {
  id          String   @id @default(uuid())
  telegramId  BigInt?   @unique
  username    String?   @unique
  password    String?
  firstName   String?
  lastName    String?
  photoUrl    String?
  role        UserRole @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  auditLogs   AuditLog[]
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
