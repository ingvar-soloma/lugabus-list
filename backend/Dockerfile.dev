FROM node:22-bookworm-slim

# Enable pnpm
RUN corepack enable

# Install global tools and system deps
RUN apt-get update && apt-get install -y openssl procps git && rm -rf /var/lib/apt/lists/*

WORKDIR /usr/src/app

# The command will be overridden by docker-compose, but providing a safe default
CMD ["echo", "Ready for dev"]
