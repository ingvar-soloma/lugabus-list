# Docker Compose Environment Variables
# Copy this file to .env before running docker-compose

# --- Database Configuration ---
DB_USER=user
DB_PASSWORD=password
DB_NAME=lugabus

# --- Backend Configuration ---
# JWT Secret for authentication
JWT_SECRET=supersecretkey123

# Telegram Bot Token (for backend functionality)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# CORS Origin (Frontend URL)
# In production, set this to your actual domain
CORS_ORIGIN=http://localhost:3000

# --- Frontend Configuration ---
# Telegram Bot Name (for frontend widget, etc.)
VITE_TELEGRAM_BOT_NAME=LugabusBot

# --- Security Configuration ---
HASH_PEPPER=change_this_to_a_long_random_string_in_production

# --- Storage (Minio/S3) Configuration ---
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123
S3_ENDPOINT=http://minio:9000
S3_BUCKET=lugabus-media
S3_ACCESS_KEY=admin
S3_SECRET_KEY=admin123
S3_FORCE_PATH_STYLE=true

# --- Port Configuration (Optional overrides) ---
# PORT=8080
