{
  "name": "lugabus-list",
  "version": "1.0.0",
  "description": "Lugabus monorepo with Backend and Frontend",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "backend:dev": "pnpm --filter backend run dev",
    "frontend:dev": "pnpm --filter frontend run dev",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "backup": "pnpm run docker:dev",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "format": "prettier --write .",
    "local-ci": "pnpm install --frozen-lockfile && pnpm lint && pnpm --filter backend exec prisma generate && pnpm build",
    "prepare": "husky"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript-eslint": "^8.53.0"
  }
}
